@model IEnumerable<EquipmentServiceViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-6">Welcome to the World of Skydiving!</h2>

    @if (!(User?.Identity?.IsAuthenticated ?? false))
    {
        <h2 class="display-6"><a href="/User/Register" class="text-dark">Register</a> and find your jump destination!</h2>
    }
</div>

<div class="d-flex aligns-items-center justify-content-center row">
    <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="10000">
                <img src="@Model.ElementAt(0).ImageUrl" class="d-block w-100" alt="@Model.ElementAt(0).Title">
                <div class="carousel-caption d-none d-md-block my_dm">
                    <h3>@Model.ElementAt(0).Brand @Model.ElementAt(0).Title</h3>
                    <p>
                        <a class="text-dark" asp-controller="Equipment" asp-action="All" asp-route-searchTerm="@Model.ElementAt(0).Title">Get it now for @Model.ElementAt(0).Price!</a>
                    </p>
                </div>
            </div>
            <div class="carousel-item " data-bs-interval="2000">
                <img src="@Model.ElementAt(1).ImageUrl" class="d-block w-100" alt="@Model.ElementAt(1).Title">
                <div class="carousel-caption d-none d-md-block my_dm">
                    <h3>@Model.ElementAt(1).Brand @Model.ElementAt(1).Title</h3>
                    <p>
                        <a class="text-dark" asp-controller="Equipment" asp-action="All" asp-route-searchTerm="@Model.ElementAt(1).Title">Get it now for @Model.ElementAt(1).Price!</a>
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.ElementAt(2).ImageUrl" class="d-block w-100" alt="@Model.ElementAt(2).Title">
                <div class="carousel-caption d-none d-md-block my_dm">
                    <h3>@Model.ElementAt(2).Brand @Model.ElementAt(2).Title</h3>
                    <p>
                        <a class="text-dark" asp-controller="Equipment" asp-action="All" asp-route-searchTerm="@Model.ElementAt(2).Title">Get it now for @Model.ElementAt(2).Price!</a>
                    </p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>